<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="propertiesHolderFactory" class="com.opuscapita.ocisetest.properties.PropertiesHolderFactoryBean"/>

    <bean name="ibmOciRequestEncryptor" class="com.opuscapita.ocisetest.security.IbmOciRequestEncrypter">
        <property name="standardParams">
            <list>
                <value>FUNCTION</value>
                <value>OCI_VERSION</value>
                <value>HOOK_URL</value>
                <value>~TARGET</value>
                <value>~OkCode</value>
                <value>~CALLER</value>
            </list>
        </property>
    </bean>

</beans>