<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

  <bean name="propertiesHolderFactory" class="com.jcatalog.ocisetest.properties.PropertiesHolderFactoryBean">
    <property name="baseDir">
      <value>${ocisetest.root}/WEB-INF/conf/opc</value>
    </property>
  </bean>

  <bean name="schemaHolderFactory" class="com.jcatalog.ocisetest.schemas.SchemaHolderFactory" init-method="init">
    <property name="baseDir">
      <value>${ocisetest.root}/WEB-INF/conf/punchout</value>
    </property>
  </bean>

  <bean name="itemStorageManager" class="com.jcatalog.ocisetest.schemas.ItemStorageManager"/>

  <bean id="sysPropsPP" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="systemPropertiesMode"><value>2</value></property>
  </bean>


  <bean name="ibmOciRequestEncrypter" class="com.jcatalog.ocisetest.security.IbmOciRequestEncrypter">
    <property name="standardParams">
      <list>
       <value>FUNCTION</value>
       <value>OCI_VERSION</value>
       <value>HOOK_URL</value>
       <value>~TARGET</value>
       <value>~OkCode</value>
       <value>~CALLER</value>
     </list>
    </property>
  </bean>

</beans>